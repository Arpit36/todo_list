<html>
    <head>
        <title>
            <%= title%>
        </title>
    </head>
    <body>
        <!-- <h1 style="text-align: center;"> setting up the page</h1> -->

        <div id="outer-frame">
            <!-- adding todo app statement -->
            <h1 id="title">TODO App</h1>

            
            <form action = "/add-item" method = "POST">
            <div id ="description-box">
                <h5>DESCRIPTION</h5>
                
            </div>

            
            
            <input type="text" name = "textfieldmain" required>

            <!-- adding category and due date in same row -->
            <div id = "category">
                <h5>CATEGORY</h5>
                                    <!-- <input name = "category" type="select" required> -->
                <select name = "category" required>
                    <option value="value1" selected>value1</option>
                    <option value="value2">value2</option>
                    <option value="value3">value3</option>
                    <option value="value4">value4</option>
                    <option value="value5">value5</option>
                    <option value="value6">value6</option>
                </select>
                
            </div>


            <div id="due-date">
                <!-- add calender -->
                <h5> DUE DATE</h5>
                
                    <input name = "date" type="date">

                
            </div>


            <!-- adding two buttons in same line -->

            <button class = "buttons" id="add-item" type = "submit">
                <h3>ADD ITEM</h3>
            </button>

            <button class = "buttons" id = "delete">
                <h3>DELETE</h3>
            </button>
            </form>
            


            <!-- dynamic adding of items -->
            <div id="last-div" style="background-color: aquamarine;">
               <% for(let i of list_item){%>
                    <p><%=i.textfieldmain%></p>
                    <p><%=i.date%></p>
                    <p><%=i.category%></p>
                <%}%>  
            </div>



        </div>
    </body>
</html>